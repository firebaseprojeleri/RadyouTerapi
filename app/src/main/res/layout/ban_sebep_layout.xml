<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/banSebepText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/ban_reason"
        android:inputType="textPersonName"
        android:maxLines="5"
        android:maxWidth="200dp"/>

    <TimePicker
        android:id="@+id/unBanTimePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:headerBackground="#303F9F"
        android:numbersSelectorColor="#303F9F" />

    <CheckBox
        android:id="@+id/infinityCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/infinity_ban" />

</LinearLayout>